{% extends "FCPlatformBundle::layout.html.twig" %}

{% block FCPlatform_body %}
    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Builds</h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('fc_platform_homepage') }}">Home</a>
                    </li>
                    <li><a href="{{ path('fc_platform_admin') }}">Admin</a>
                    </li>
                    <li class="active">Builds</li>
                </ol>
            </div>
        </div>

        {% for build in builds %}
            <div class="well">
                <div class="media">
                    <a class="pull-left" href="#">
                        <img src="{{ asset(build.god.image.webpath) }}" alt="{{ build.god.image.alt }}">
                    </a>

                    <h4 class="media-heading"><a href="{{ path('fc_platform_buildpage',{'id': build.id}) }}">{{ build.buildName }}</a>
                    </h4>

                    <small>By {{ build.user }}</small>
                    <div style="float:right">
                        <a class="btn btn-primary" href="{{ path('fc_platform_admindeletebuild', {'id': build.id}) }}">Delete</i></a>
                    </div>

                </div>
            </div>

            <hr>
        {% endfor %}










        <hr>
        <!-- Footer -->
        <footer style="margin:5px">
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; SmiteBuild 2016</p>
                </div>
            </div>
        </footer>

    </div>

    <!-- /.container -->
{% endblock %}
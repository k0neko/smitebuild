{% extends "FCPlatformBundle::layout.html.twig" %}

{% block FCPlatform_body %}
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edit User</h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('fc_platform_homepage') }}">Home</a>
                    </li>
                    <li><a href="{{ path('fc_platform_admin') }}">Admin</a>
                    </li>
                    <li class="active">Edit build</li>
                </ol>
            </div>
        </div>

        <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
        <div class="row">
            <div style="margin:auto;width:500px">

                <p>
                    Etes-vous certain de vouloir supprimer ce build ?
                </p>

                {# On met l'id de l'annonce dans la route de l'action du formulaire #}
                <form action="{{ path('fc_platform_admindeletebuild', {'id': build.id}) }}" method="post">
                    <a href="{{ path('fc_platform_admin', {'id': build.id}) }}" class="btn btn-default">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        Retour admin
                    </a>
                    {# Ici j'ai écrit le bouton de soumission à la main #}
                    <input type="submit" value="Supprimer" class="btn btn-danger" />
                    {# Ceci va générer le champ CSRF #}
                    {{ form_rest(form) }}
                </form>
            </div>

        </div>
        <!-- /.row -->


        <hr>
        <!-- Footer -->
        <footer style="margin:5px">
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; SmiteBuild 2016</p>
                </div>
            </div>
        </footer>

    </div>
{% endblock %}
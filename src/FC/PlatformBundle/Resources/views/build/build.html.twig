{% extends "FCPlatformBundle::layout.html.twig" %}

{% block FCPlatform_body %}
    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Builds</h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('fc_platform_homepage') }}">Home</a>
                    </li>
                    <li class="active">Builds</li>
                </ol>
            </div>
        </div>

        <a href="{{ path('fc_platform_addbuild') }}" class="btn btn-lg btn-default btn-block" style="background-color:#337AB7;color:#F5F5F5">Create a build</a>
        <hr>



        {% for build in builds %}
        <div class="well">
            <div class="media">
                <a class="pull-left" href="#">
                    <img src="{{ asset(build.god.image.webpath) }}" alt="{{ build.god.image.alt }}">
                </a>

                <h4 class="media-heading"><a href="{{ path('fc_platform_buildpage',{'id': build.id}) }}">{{ build.buildName }}</a></h4>


                <small>By <a href="{{ path('fc_platform_publicprofil', {'id':build.user.id}) }}">{{ build.user }}</a></small>

            </div>
        </div>

        <hr>
        {% endfor %}



    {% if nbPages > 1 %}
        <ul class="pagination">

            {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}

            {% for p in range(1, nbPages) %}

                <li{% if p == page %} class="active"{% endif %}>

                    <a href="{{ path('fc_platform_build', {'page': p}) }}">{{ p }}</a>

                </li>

            {% endfor %}

        </ul>
        {% endif %}






        <hr>
        <!-- Footer -->
        <footer style="margin:5px">
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; SmiteBuild 2016</p>
                </div>
            </div>
        </footer>

    </div>

    <!-- /.container -->
{% endblock %}
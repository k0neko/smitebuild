{% extends "FCPlatformBundle::layout.html.twig" %}

{% block FCPlatform_body %}
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Search</h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('fc_platform_homepage') }}">Home</a>
                    </li>
                    <li class="active">Search</li>
                </ol>
            </div>
        </div>


        <div class="well">

            <form method="get">

                <h4>God :</h4>
                <select class="form-control" name="god">
                    <option value="Agni">Agni</option>
                    <option value="Anubis">Anubis</option>
                    <option value="Amaterasu">Amaterasu</option>
                    <option value="Aphrodite">Aphrodite</option>

                </select>
            <h4>Build Search:</h4>


                <div class="input-group">
                    <input type="text" class="form-control" name="keyword">
            <span class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                </div>
            </form>
            <!-- /.input-group -->
        </div>
        <h5>Result:</h5>

        {% for build in builds %}
            <div class="well">
                <div class="media">
                    <a class="pull-left" href="#">
                        <img src="{{ asset(build.god.image.webpath) }}" alt="{{ build.god.image.alt }}">
                    </a>

                    <h4 class="media-heading"><a href="{{ path('fc_platform_buildpage',{'id': build.id}) }}">{{ build.buildName }}</a>
                    </h4>

                    <small>By {{ build.user }}</small>

                </div>
            </div>

            <hr>
        {% endfor %}






        <hr>
        <!-- Footer -->
        <footer style="margin:5px">
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; SmiteBuild 2016</p>
                </div>
            </div>
        </footer>

    </div>
{% endblock %}
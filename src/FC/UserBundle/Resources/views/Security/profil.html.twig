{% extends "FCUserBundle::layout.html.twig" %}

{% block FCUser_body %}
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add User</h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('fc_platform_homepage') }}">Home</a>
                    </li>
                    <li>Profil</a>
                    </li>
                </ol>
            </div>
        </div>

        <div class="well">
            <div class="media">


                <h4 class="media-heading"><a href="#">{{ user.username }}</a>
                </h4>
                <small>{{ user.email }}</small>
                <p class="help-block"></p>

                <a class="btn btn-primary" href="{{ path('fc_platform_editprofil', {'id': user.id}) }}">Edit profil</i></a>

            </div>
             </div>

        <hr>
        <h4>Builds :</h4>
        <hr>

        {% for build in builds %}
            <div class="well">
                <div class="media">
                    <a class="pull-left" href="#">
                        <img src="{{ asset(build.god.image.webpath) }}" alt="{{ build.god.image.alt }}">
                    </a>

                    <h4 class="media-heading"><a href="{{ path('fc_platform_buildpage',{'id': build.id}) }}">{{ build.buildName }}</a>
                    </h4>

                    <div style="float:right">
                        <a class="btn btn-primary" href="{{ path('fc_platform_editbuild', {'id': build.id}) }}">Edit</i></a>
                    </div>




                </div>
            </div>

            <hr>
        {% endfor %}


        <hr>
        <!-- Footer -->
        <footer style="margin:5px">
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; SmiteBuild 2016</p>
                </div>
            </div>
        </footer>

    </div>
{% endblock %}